@model Student_servis.Dto.StudentIspitDto

@{
    ViewBag.Title = "Create";
   
}


<h2>Unos ispita i ocene</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

   
    <div class="form-group" >
        <table class="table" >
            
            @if (ViewBag.students != null)
            {
                <tr>
                    <td><b><h4>Lista studenata</h4></b></td>
                    <td>
                        
                        @Html.DropDownListFor(model => model.idStudent, new SelectList(ViewBag.students, "idStudent", "Broj_index"), "Izaberite....", new { @class = "form-control dropdown" })
                        @Html.ValidationMessageFor(model => model.idStudent, "", new { @class = "text-danger" })
                        
                    </td>
                </tr>
                <tr>
                    <td>
                        <b><h4>Lista ispita</h4></b>
                    </td>
                    <td>
                      
                        @Html.DropDownListFor(model => model.idIspit, new SelectList(ViewBag.ispits, "idIspit", "Naziv"), "Izaberite....", new { @class = "form-control dropdown" })
                        @Html.ValidationMessageFor(model => model.idIspit, "", new { @class = "text-danger" })
                        
                    </td>
                </tr>
                <tr>
                    <td>
                        <h4>Ocena</h4>
                    </td>
                    <td>
                        @Html.EditorFor(model => model.Ocena, new { htmlAttributes = new { @class = "form-control"  ,@placeholder="e.g 5-10"} })
                        @Html.ValidationMessageFor(model => model.Ocena, "", new { @class = "text-danger" })
                        @Html.ValidationSummary(true,"", new { @class = "text-danger " })
                        
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        <input type="submit" value="Kreiraj" class="btn btn-info" id="kreiraj"  />
                    </td>
                </tr>
            }
            
            
        </table>
      
       


    </div>
}
<button class="btn btn-success">@Html.ActionLink("Evidencija ispita", "Dnevnik")</button>
